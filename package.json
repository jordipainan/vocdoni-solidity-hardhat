{
  "name": "erc20-proofs",
  "version": "1.0.0",
  "description": "erc20 storage proof verifier",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npm run geth:pull && npm run geth:start && sleep 10 && hardhat test --network development && npm run geth:stop",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage",
    "geth:pull": "docker pull ethereum/client-go:v1.9.24",
    "geth:start": "docker run -p 8545:8545 --name geth-test ethereum/client-go:v1.9.24 --http --http.addr 0.0.0.0 --http.port 8545 --http.api personal,eth,net,web3,admin --dev --dev.period 10 --miner.gastarget 80000000 --networkid 15 --verbosity 0 &>/dev/null &",
    "geth:stop": "docker stop geth-test && docker rm -f geth-test"
  },
  "author": "",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.36",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.1",
    "hardhat-typechain": "^0.3.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "@typechain/ethers-v5": "^6.0.5",
    "ts-generator": "^0.1.1",
    "typechain": "^4.0.3"
  },
  "dependencies": {
    "@ethereumjs/block": "^3.2.0",
    "@vocdoni/storage-proofs-eth": "^0.2.3"
  }
}
